<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Nubia.Button" parent="@android:style/Widget.Material.Light.Button">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textSize">@dimen/common_dialog_posneg_tvsize</item>
        <item name="android:background">@drawable/nubia_btn_default_material</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:statusBarColor">@color/appbar_bg</item>
    </style>
    <style name="Theme.NoTitle" parent="@android:style/Theme.Holo.Light">
        <item name="android:buttonStyle">@style/Widget.Nubia.Button</item>
        <item name="android:windowBackground">@drawable/app_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:radioButtonStyle">@style/Widget.Nubia.CompoundButton.RadioButton</item>
        <item name="android:checkMark">@drawable/abc_btn_radio_material</item>
        <item name="android:statusBarColor">@color/statu_bar_bg</item>
    </style>
    <style name="Theme.NoTitle.Whtistatusbar" parent="@android:style/Theme.Holo.Light">
        <item name="android:buttonStyle">@style/Widget.Nubia.Button</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:radioButtonStyle">@style/Widget.Nubia.CompoundButton.RadioButton</item>
        <item name="android:checkMark">@drawable/abc_btn_radio_material</item>
        <item name="android:statusBarColor">@color/statu_bar_bg</item>
    </style>
    <style name="Theme.FullScreenPlayer" parent="@android:style/Theme.Holo.Light">
        <item name="android:buttonStyle">@style/Widget.Nubia.Button</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:radioButtonStyle">@style/Widget.Nubia.CompoundButton.RadioButton</item>
        <item name="android:checkMark">@drawable/abc_btn_radio_material</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@color/statu_bar_bg</item>
    </style>
</resources>
